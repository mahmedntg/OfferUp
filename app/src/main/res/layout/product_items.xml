<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/productImage"
            android:background="@drawable/ic_mr_button_connecting_22_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mmm"
            android:layout_toRightOf="@+id/productImage"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/productName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="acds edggs"
            android:layout_toRightOf="@+id/productImage"
            android:layout_below="@id/productName"
            android:textColor="@color/productPlaceName"
            android:textSize="12dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/productPlaceName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23$"
            android:layout_toRightOf="@+id/productName"
            android:textSize="15dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:id="@+id/productPrice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dadds"
            android:layout_toRightOf="@+id/productPrice"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/productEndDate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/productEndDate"
            android:id="@+id/deleteProduct"
            android:drawableEnd="@mipmap/ic_delete_forever_black_48dp"
            android:drawableRight="@mipmap/ic_delete_forever_black_48dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>